{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "declaration": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "baseUrl": ".",
    "paths": {
      "#types/*": ["types/*"],
      "#types": ["types/index.d.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "types"]
}
